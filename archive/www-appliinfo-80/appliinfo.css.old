body {
   margin: 0;
   padding: 0;
}
div.O {
   background: url(img/O_small.png) no-repeat;
}
div.I {
   background: url(img/I_small.png) no-repeat;
}
div.W {
   background: url(img/W_small.png) no-repeat;
}
div.M {
   background: url(img/M_small.png) no-repeat;
}
div.C {
   background: url(img/C_small.png) no-repeat;
}
div.F {
   background: url(img/F_small.png) no-repeat;
}
div.U {
   background: url(img/U_small.png) no-repeat;
}
div {
   vertical-align: center;
}
div.legend {
   margin: 20px auto;
}
div.legend div {
   width: 75px;
   height: 30px;
   display: inline-block;
   padding-left: 25px;
   text-align: left;
}
div.app {
   height: 32px;
   margin-bottom: 5px;
   z-index: 10;
   font-weight: bold;
   font-size: 120%;
}
div.app > img {
   vertical-align: middle;
   margin-right: 5px;
}
div.sit {
   display: none;
   border: 1px black dotted;
   z-index: 20;
   padding: 3px;
   font-size: 80%;
}
div.sit div {
   height: 20px;
   padding-left: 25px;
   vertical-align: center;
   margin-bottom: 5px;
}
div.sit img {
   height: 16px;
   width: 16px;
}
table {
   width: 100%;
}
td {
   vertical-align: top;
}
p.lastupdate {
   font-size: 80%;
   border-top: 1px #909090 dotted;
   color: #909090;
   text-align: center;
   padding-top: 5px;
}

h1 {
   font-size: 200%;
   color: #007fbc;
   margin-top: 0;
   margin-bottom: 9px;
}
h2 {
   font-size: 150%;
   color: #1f9bd5;
   margin-top: 0;
   margin-bottom: 9px;
}
h2 a {
   text-decoration: none;
   color: #1f9bd5;
}
h2 a:hover {
   text-decoration: underline;
}
